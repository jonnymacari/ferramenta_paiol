# Configurações de Produção - Django Ferramenta Paiol
# Copie este arquivo para .env e configure as variáveis

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production
DJANGO_SETTINGS_MODULE=camp_project.settings_prod

# Hosts permitidos (adicione seu domínio)
ALLOWED_HOST=yourdomain.com

# Database (PostgreSQL recomendado para produção)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Provedor de hospedagem (railway, render, pythonanywhere, heroku)
HOSTING_PROVIDER=railway

# HTTPS (ativar quando tiver SSL configurado)
USE_HTTPS=False

# Email Configuration (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Redis Cache (opcional - para melhor performance)
REDIS_URL=redis://localhost:6379/0

# Configurações específicas por provedor
# Railway: Não precisa configurar nada extra
# Render: Adicione RENDER=True se necessário
# PythonAnywhere: Adicione PYTHONANYWHERE=True se necessário
